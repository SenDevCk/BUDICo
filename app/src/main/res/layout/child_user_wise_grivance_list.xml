<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_entrydate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        android:gravity="right"
        android:text="date"
        android:textColor="#282724"
        android:textSize="9dip"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="#040404"
                android:textSize="16dip"
                android:visibility="gone"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tv_Grivance_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Grievance Type"
                android:textColor="#282724"
                android:textSize="16dip"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tv_Grivance_Id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Grievance Id"
                android:textColor="#5C5959"
                android:textSize="12dip"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tv_Grivance_sts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="#FB0113"
                android:textSize="12dip"
                android:textStyle="bold"
                android:typeface="sans" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_weight=".15">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".45"
            android:padding="1dip">

            <ImageView
                android:id="@+id/img_GrivanceImg"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:background="#eee"
                android:padding="1dp"
                android:scaleType="fitXY" />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
